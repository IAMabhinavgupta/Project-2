extends base.pug

block scripts
  script(src='/static/script.js')

block style
    style
      include ../static/style.css
      include ../static/styleContact.css

block content
  div.container
    h1 Contact-Us
    form(action="/contact",method="post",class="myForm")
        input(type="text", class="myInput",name="name", placeholder="Enter Your Name Here.")
        input(type="phone", class="myInput",name="phone", placeholder="Enter Your Mobile / Phone Here.")
        input(type="e-mail", class="myInput",name="e-mail", placeholder="Enter Your E-Mail Here.")
        input(type="address", class="myInput",name="address", placeholder="Enter Your Address  Here.")
        input(type="text", class="myInput",name="concern", placeholder="Enter Your Consern Here.")
        button(class="btn")
